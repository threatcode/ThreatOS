label live-@FLAVOUR@
        menu label ^Live system (@FLAVOUR@)
        menu default
        linux @LINUX@
        initrd @INITRD@
        append @APPEND_LIVE@

label live-@FLAVOUR@-failsafe
        menu label Live system (@FLAVOUR@ fail-safe mode)
        linux @LINUX@
        initrd @INITRD@
        append @APPEND_LIVE_FAILSAFE@

label live-forensic
        menu label Live system (@FLAVOUR@ ^forensic mode)
        linux @LINUX@
        initrd @INITRD@
        append boot=live username=threatos hostname=threatos systemd.swap=no noautomount

label live-persistence
        menu label Live system with ^USB persistence  (check ../prst)
        linux @LINUX@
        initrd @INITRD@
        append boot=live username=threatos hostname=threatos persistence

label live-encrypted-persistence
        menu label Live system with USB ^Encrypted persistence
        linux @LINUX@
        initrd @INITRD@
        append boot=live persistent=cryptsetup persistence-encryption=luks username=threatos hostname=threatos persistence

